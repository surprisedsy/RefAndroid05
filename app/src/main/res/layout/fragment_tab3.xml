<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ListView
        android:id="@+id/itemlistview3"
        android:layout_above="@+id/listviewabove3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/tab3itemimage"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tab3itemimage">

        <TextView
            android:id="@+id/nameTxt3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/dateTxt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/edateTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/amountTxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="45dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/nullText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20dp"/>

    <FrameLayout
        android:id="@+id/listviewabove3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>